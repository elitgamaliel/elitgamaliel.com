<style lang="scss" >
    :root {
        --widthLogoMobile: 5rem;
        --widthLogoDesktop: 7rem;
        --marginLogoMobile: 4rem;
        --marginLogoDesktop: 5rem;
    }

    img {
        display: inline-block;
        width: var(--widthLogoMobile);
    }
    .logo {
        width: var(--widthLogoMobile);
        margin-right: var(--marginLogoMobile);

        &__name {
            margin: 0;
            text-align: center;
        }
    }

    /*----------- Responsive Design -----------*/
    @media screen and (width >= 768px) {
        img {
            width: var(--widthLogoDesktop);
        }
        .logo {
            width: var(--widthLogoDesktop);
            margin-right: var(--marginLogoDesktop);
        }
    }
</style>